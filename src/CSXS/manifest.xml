<?xml version="1.0" encoding="UTF-8"?>

<ExtensionManifest Version="4.0" ExtensionBundleId="com.example.sampleext" ExtensionBundleVersion="1.0.0"
    ExtensionBundleName="SampleExt" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ExtensionList>
    <Extension Id="com.example.sampleext" Version="1.0" />
  </ExtensionList>
  <ExecutionEnvironment>
    <HostList>
            <Host Name="PHXS" Version="[14.0,2100.0]" /><Host Name="PHSP" Version="[14.0,2100.0]" />
    </HostList>
    <LocaleList>
      <Locale Code="All" />
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="4.0" />
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  <DispatchInfoList>
    <Extension Id="com.example.sampleext">
      <DispatchInfo >
        <Resources>
        <MainPath>./index.html</MainPath>
        <ScriptPath>./jsx/hostscript.jsx</ScriptPath>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>SampleExt</Menu>
          <Geometry>
            <Size>
              <Height>300</Height>
              <Width>300</Width>              
